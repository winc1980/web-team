---
import '@/scss/styles.scss'
import Header from '@/components/Header.astro'
import SPHeader from '@/components/SPHeader.astro'
import Footer from '@/components/Footer.astro'
import { GoogleAnalytics } from 'astro-google-analytics'
// Supports weights 100-900
import '@fontsource-variable/noto-sans-jp'
import '@fontsource-variable/heebo'
// タイトル等をPropsとして受け取る。
let { title, description, og_image } = Astro.props
// タイトル等が空の場合やnullの場合はデフォルト値を設定
title =
  title || 'Webチーム公式サイト | Webサイト制作・Webアプリ開発・Webデザインが学べる | 早稲田コンピュータ研究会・WINC Webチーム'
description =
  description ||
  'Webチームの公式サイトです。Webチームは「『創る』を楽しめる人になろう」を指針とし、Webサイトの制作・提供(無償)やWebアプリケーションの開発を行っています。'
const baseURL = 'https://web-team.winc.ne.jp/';
og_image = og_image || baseURL + 'assets/images/webteam_banner.webp'
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="早稲田コンピュータ研究会・WINC Webチーム" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={og_image} />
    <meta name="twitter:site" content="@WinCircleHpTeam" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content={og_image} />
    <link rel="icon" sizes="32x32" href="/favicon.ico" />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
    ></script>
    <GoogleAnalytics id="G-CNNRHBHLJQ" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body>
    <Header />
    <SPHeader />
    <slot />
    <Footer />
  </body>
</html>
